<div class="container text-center">
  <h1>Our Team</h1>
  <ul class="list-inline">
    <% ["charles", "alban"].each do |member| %>
      <li>
        <h3><%= member.capitalize %></h3>
        <%= image_tag "#{member}.jpg", class: "avatar-xlarge" %>
      </li>
    <% end %>
  </ul>

  <h3 class="padded"><% link_to "mailto:contact@airbnb.com" do %>
    <i class="fa fa-envelope"></i>
    contact@airbnb.com
  <% end %></h3>
</div>

